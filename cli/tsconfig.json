{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/types/*.d.ts"],
	"exclude": ["node_modules"]
}
